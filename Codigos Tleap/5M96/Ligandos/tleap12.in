source leaprc.protein.ff19SB
source leaprc.gaff2
source leaprc.water.tip3p

MOL = loadmol2 mol2/Mol12/Mol12.mol2 
loadamberparams mol2/Mol12/Mol12.frcmod
saveamberparm MOL mol2/Mol12/Mol12.prmtop mol2/Mol12/Mol12.inpcrd
saveoff MOL mol2/Mol12/Mol12.lib
loadoff mol2/Mol12/Mol12.lib

protein = loadpdb 5m96.amber.pdb

complex = combine {protein MOL}
savepdb complex mol2/Mol12/5m96_Mol12.pdb
saveamberparm complex mol2/Mol12/5m96_Mol12.prmtop mol2/Mol12/5m96_Mol12.inpcrd

solv_complex = combine {protein MOL}
solvateBox solv_complex TIP3PBOX 8.0
addIons solv_complex Na+ 0
addIons solv_complex Cl- 0
savepdb solv_complex mol2/Mol12/5m96_Mol12_solv.pdb
saveamberparm solv_complex mol2/Mol12/5m96_Mol12_solv.prmtop mol2/Mol12/5m96_Mol12_solv.inpcrd
quit 
